<h1>Foods</h1>
<div class='foods-list'>
  <table>
    <tr>
      <th>Food</th>
      <th>Measurement Unit</th>
      <th>Price</th>
      <th>Action</th>
    </tr>
    <% @foods.each do |food| %>
    <tr>
      <td><%= food.name%></td>
      <td><%= food.measurement_unit%></td>
      <td>$<%= food.price%></td>
      <td><%= button_to "Delete", food_path(food), method: :delete %></td>
    </tr>
    <% end %>
  </table>
</div>
<%= link_to "New food", new_food_path %>